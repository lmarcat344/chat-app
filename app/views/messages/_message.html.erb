<div class='message'>
  <div class='mes_header'>
    <div class='mes_name'>
        <%= message.user.name %>
    </div>
    <div class='mes_date'>
        <%= l message.created_at %>
    </div>
  </div>
  <div class='mes_cont'>
      <%= message.content %> 
  </div> 
  <%= image_tag message.image.variant(resize: '100x100'), class: 'message_image' if message.image.attached? %>
</div> 
  