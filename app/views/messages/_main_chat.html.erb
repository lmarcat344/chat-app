
<%# **********ヘッダー************** %>
<div class='main_header'>
  <div class='room_name'>
    hoge<%= current_user %>
  </div>
  <a class='chat_exit_button' href='#'>
    チャットを終了する
  </a>
</div>

<%# **********メインコンテンツ ***************** %>
<div class='main_cont'>
    
      <%= render partial: 'message', collection: @messages %>
    
</div>


<%# ＊＊＊＊＊＊＊＊＊フッター＊＊＊＊＊＊＊ %>
<div class='main_footter'>
  <%= form_with model: [@room, @message], class: 'mes_form', local: true do |f| %>
    <div class='form_input'>    
      <%= f.text_field :content, class: 'name_form', placeholder: 'type a message' %>
        <label class="form_image">
          <span class="image_file">画像</span>
          <%= f.file_field :image, class: 'hidden' %>
        </label>
    </div>
    <%= f.submit '送信', class: 'send_form' %>
  <% end %>
</div>

