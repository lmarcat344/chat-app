<div class='side_header'>
  <div class='left_name'>
    <%= link_to current_user.name, edit_user_path(current_user.id) %>
  </div>
  <div class='make_chat_button'>
    <%= link_to 'チャットを作成する',  new_room_path %>
  </div>
</div>
<div class='chat_room'>
  <% @room_id.each do |room| %>
  <div class='room'>
    <%= link_to room.name, room_messages_path(room), method: :get %>
  </div>
  <% end %>
  
  
</div>